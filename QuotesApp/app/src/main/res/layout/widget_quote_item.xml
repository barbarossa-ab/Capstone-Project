<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quote_item_container"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/quote_text"
        android:paddingTop="@dimen/card_text_top_margin"
        android:paddingLeft="@dimen/card_text_side_margin"
        android:paddingRight="@dimen/card_text_side_margin"
        android:textColor="@android:color/background_light"
        android:gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textStyle="bold"
        android:id="@+id/author_text"
        android:paddingTop="@dimen/card_text_between_margin"
        android:paddingStart="@dimen/card_text_side_margin"
        android:paddingEnd="@dimen/card_text_side_margin"
        android:paddingLeft="@dimen/card_text_side_margin"
        android:paddingRight="@dimen/card_text_side_margin"
        android:paddingBottom="@dimen/card_text_bottom_margin"
        android:textColor="@color/colorAccent"
        android:gravity="end" />

    <!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:background="@color/grey"-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="12dp"/>-->

</LinearLayout>