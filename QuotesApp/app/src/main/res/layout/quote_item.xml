<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:id="@+id/quote_text"
            android:paddingTop="@dimen/card_text_top_margin"
            android:paddingLeft="@dimen/card_text_side_margin"
            android:paddingRight="@dimen/card_text_side_margin"
            android:textColor="@android:color/background_light"
            android:gravity="start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textStyle="bold"
            android:id="@+id/author_text"
            android:paddingTop="@dimen/card_text_between_margin"
            android:paddingStart="@dimen/card_text_side_margin"
            android:paddingEnd="@dimen/card_text_side_margin"
            android:paddingLeft="@dimen/card_text_side_margin"
            android:paddingRight="@dimen/card_text_side_margin"
            android:paddingBottom="@dimen/card_text_bottom_margin"
            android:textColor="@color/colorAccent"
            android:gravity="end" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/favourite_btn"
            android:paddingLeft="@dimen/card_margin"
            android:paddingRight="@dimen/card_margin"
            android:paddingStart="@dimen/card_margin"
            android:paddingEnd="@dimen/card_margin"
            android:paddingTop="@dimen/card_margin"
            android:paddingBottom="@dimen/card_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_white_24dp"
            android:contentDescription="@string/mark_fav_description"/>

        <ImageView
            android:id="@+id/share_btn"
            android:paddingLeft="@dimen/card_margin"
            android:paddingRight="@dimen/card_margin"
            android:paddingStart="@dimen/card_margin"
            android:paddingEnd="@dimen/card_margin"
            android:paddingTop="@dimen/card_margin"
            android:paddingBottom="@dimen/card_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_white_24dp"
            android:contentDescription="@string/share_description"/>

    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
